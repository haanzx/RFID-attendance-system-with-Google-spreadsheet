#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>
#include <WiFiClientSecure.h>
#include <MFRC522.h>
#include <SPI.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <NTPClient.h>
#include <WiFiUdp.h>

// --- Pin Definition ---
#define SS_PIN D8   
#define RST_PIN D0  
#define BUTTON_MASUK_PIN D3  
#define BUTTON_PULANG_PIN D4  
#define BUZZER_PIN D9

// --- Object Initialization ---
MFRC522 mfrc522(SS_PIN, RST_PIN);
LiquidCrystal_I2C lcd(0x27, 16, 2);

// --- Network Configuration & Google Apps Script ---
const char* ssid = "your-ssid"; // <--- GANTI
const char* password = "your-password"; // <--- GANTI
const String GOOGLE_SCRIPT_URL = "your-google-script-url"; // <--- GANTI

// --- Time Configuration ---
WiFiUDP ntpUDP;
const int TimeZone = 7; // <--- GANTI: Contoh untuk GMT +7
// Set interval sangat tinggi, kita akan kontrol update-nya secara manual
NTPClient timeClient(ntpUDP, "pool.ntp.org", TimeZone * 3600, 86400000); 

// --- Variabel Global untuk Timing Non-Blokir ---
long lastDisplayUpdate = 0;
const long displayInterval = 1000; // Update LCD setiap 1 detik
long lastNTPUpdate = 0;
const long ntpInterval = 86400000; // Update NTP ke server (Koreksi) setiap 24 jam (86.400.000 ms)

// --- Variabel Global untuk Debounce Tombol ---
long lastDebounceTimeMasuk = 0;
long lastDebounceTimePulang = 0;
const long debounceDelay = 50; // Jeda 50ms untuk debounce

// --- Variabel Global untuk Display ---
String formattedTime;
String dayDisplay;

// --- Function Declaration ---
void sendDataToGoogleSheets(String uid, String status);
void waitForCardAndSend(String status);
void beepSuccess();
void beepFailure(); 
void updateDisplaySiaga();

void setup() {
    Serial.begin(9600);
    Wire.begin(); 
    SPI.begin();
    mfrc522.PCD_Init();

    // --- Pin Konfiguration ---
    pinMode(BUTTON_MASUK_PIN, INPUT_PULLUP);
    pinMode(BUTTON_PULANG_PIN, INPUT_PULLUP);
    pinMode(BUZZER_PIN, OUTPUT);

    // --- Initialize LCD ---
    lcd.init(); 
    lcd.backlight();
    lcd.setCursor(0, 0);
    lcd.print("Connect WiFi");
    lcd.setCursor(0, 1);

    // --- WiFi Settings ---
    Serial.println("Menghubungkan ke WiFi...");
    WiFi.mode(WIFI_STA);
    WiFi.begin(ssid, password);
    while (WiFi.status() != WL_CONNECTED) {
        delay(500);
        lcd.print(".");
        Serial.print(".");
    }
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("Terhubung!");
    Serial.println("\nWiFi connected");
    Serial.println("IP address: " + WiFi.localIP().toString());

    beepSuccess(); 
    // Inisialisasi Klien NTP
    timeClient.begin(); 
    timeClient.forceUpdate(); // Paksa update pertama kali saat setup

    delay(1000);
    lcd.clear();
}

void loop() {
  updateDisplaySiaga(); // Sekarang ini non-blokir!

  // --- Logika Tombol Masuk (Non-Blokir Debounce) ---
  if (digitalRead(BUTTON_MASUK_PIN) == LOW) { // Tombol ditekan
    if ((millis() - lastDebounceTimeMasuk) > debounceDelay) {
      lastDebounceTimeMasuk = millis(); // Catat waktu penekanan baru

      lcd.clear();
      lcd.setCursor(2, 0);
      lcd.print("Absen  Masuk");
      lcd.setCursor(2, 1);
      lcd.print("Tempel Kartu");
      
      waitForCardAndSend("Masuk");
    }
  }

  // --- Logika Tombol Pulang (Non-Blokir Debounce) ---
  if (digitalRead(BUTTON_PULANG_PIN) == LOW) { // Tombol ditekan
    if ((millis() - lastDebounceTimePulang) > debounceDelay) {
      lastDebounceTimePulang = millis(); // Catat waktu penekanan baru

      lcd.clear();
      lcd.setCursor(2, 0);
      lcd.print("Absen Pulang");
      lcd.setCursor(2, 1);
      lcd.print("Tempel Kartu");

      waitForCardAndSend("Pulang");
    }
  }
}

// --- Fungsi Penanganan RFID ---
void waitForCardAndSend(String status) {
  long startTime = millis();
  while (millis() - startTime < 7500) { // Timeout 7,5 detik
    if (mfrc522.PICC_IsNewCardPresent() && mfrc522.PICC_ReadCardSerial()) {
      String uidString = "";
      for (byte i = 0; i < mfrc522.uid.size; i++) {
        uidString += String(mfrc522.uid.uidByte[i] < 0x10 ? "0" : "");
        uidString += String(mfrc522.uid.uidByte[i], HEX);
      }

      lcd.setCursor(0, 1);
      lcd.print("#---Mengirim---#");

      sendDataToGoogleSheets(uidString, status);

      mfrc522.PICC_HaltA();
      delay(1500); // Jeda untuk menampilkan pesan sukses/gagal
      return; // Keluar dari fungsi
    }
    yield(); // Non-blokir: Memastikan WDT di-reset dan tugas lain berjalan
  }

  // Jika timeout
  lcd.clear();
  lcd.setCursor(2,0);
  lcd.print("Waktu Habis!");
  beepFailure();
  delay(2000);
  lcd.clear();
}

// --- Fungsi Kirim Data ke Google Sheets ---
void sendDataToGoogleSheets(String uid, String status) {
  if (WiFi.status() == WL_CONNECTED) {
    WiFiClientSecure client;
    client.setInsecure();
    HTTPClient http;
    String url = GOOGLE_SCRIPT_URL + "?id=" + uid + "&status=" + status;

    if (http.begin(client, url)) { 
        // Tambahkan yield() di sini untuk menjaga koneksi tetap hidup selama GET
        yield();
        int httpCode = http.GET();

        if (httpCode > 0) {
          String payload = http.getString();
          Serial.println(payload);

          lcd.setCursor(0,1);
          lcd.print(" Data  Terkirim ");
          beepSuccess();
        } else {
          Serial.println("Error saat mengirim data. HTTP code: " + String(httpCode));
          lcd.clear();
          lcd.print("Gagal Kirim Data!");
          beepFailure(); 
        }

        http.end();
        yield(); // Yield setelah HTTP end untuk WDT reset
    } else {
        Serial.println("Gagal memulai koneksi HTTP.");
        lcd.clear();
        lcd.print("HTTP Error!");
        beepFailure();
    }
  } else {
    Serial.println("WiFi tidak terhubung.");
    lcd.clear();
    lcd.print("WiFi Terputus!");
    beepFailure(); 
  }
}

// --- Fungsi Update dan Tampilkan Waktu di LCD Siaga (Non-Blokir) ---
void updateDisplaySiaga() {
    // 1. Logika Pembaruan NTP (Koreksi waktu ke server hanya sekali sehari)
    if (millis() - lastNTPUpdate >= ntpInterval) {
        Serial.println("Melakukan koreksi waktu NTP (sekali sehari)...");
        timeClient.forceUpdate(); // Memaksa sinkronisasi ke server (potensi blokir singkat)
        lastNTPUpdate = millis();
    }

    // 2. Logika Pembaruan LCD (Update waktu dari internal clock setiap 1 detik)
    if (millis() - lastDisplayUpdate >= displayInterval) {
        // Ambil waktu dari internal clock (cepat, non-blokir)
        timeClient.update(); 
        
        formattedTime = timeClient.getFormattedTime(); 
        int currentDay = timeClient.getDay();
        String days[] = {"Min", "Sen", "Sel", "Rab", "Kam", "Jum", "Sab"};
        dayDisplay = days[currentDay];

        // Tampilkan di LCD (Baris 1)
        lcd.setCursor(2, 0);
        lcd.print(dayDisplay);
        lcd.print(" ");
        lcd.print(formattedTime);

        // Tampilkan pesan siaga (Baris 2)
        lcd.setCursor(1, 1);
        lcd.print(" Tekan Tombol ");

        lastDisplayUpdate = millis(); // Reset timer display
    }
}

// --- Buzzer Function (Tetap menggunakan delay singkat, karena cepat) ---
void beepSuccess() {
  digitalWrite(BUZZER_PIN, HIGH);
  delay(50);
  digitalWrite(BUZZER_PIN, LOW);
}
void beepFailure() {
  for (int i = 0; i < 3; i++) {
    digitalWrite(BUZZER_PIN, HIGH);
    delay(50);
    digitalWrite(BUZZER_PIN, LOW);
    delay(70);
  }
}
